<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root type="VBox" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <MenuBar>
        <Menu text="_File">
            <MenuItem onAction="#close" text="_Close" />
        </Menu>
        <Menu text="Boards">
            <MenuItem onAction="#createBoard" text="Add _new" />
            <SeparatorMenuItem />
            <MenuItem mnemonicParsing="false" onAction="#openBoard" text="Board 1" />
            <MenuItem mnemonicParsing="false" onAction="#openBoard" text="Board 2" />
        </Menu>
        <Menu text="_Help">
            <MenuItem onAction="#about" text="_About" />
        </Menu>
    </MenuBar>
    <Label id="board-name" fx:id="boardName" text="Label" />
    <HBox id="categories" fx:id="categories" spacing="10.0">
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding>
    </HBox>
</fx:root>
