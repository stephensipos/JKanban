<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>

<fx:root type="Pane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" HBox.hgrow="ALWAYS">
   <VBox fillWidth="true" spacing="5.0" fx:id="layout" prefWidth="${layout.parent.width}">
      <AnchorPane fx:id="header" id="header" prefWidth="${header.parent.width}">
         <Label fx:id="title" id="title" AnchorPane.topAnchor="5.0" AnchorPane.leftAnchor="5.0"/>
         <Button text="+" AnchorPane.topAnchor="5.0" AnchorPane.rightAnchor="5.0"/>
      </AnchorPane>
      <VBox fx:id="contents" id="contents" fillWidth="true"/>
      <Pane VBox.vgrow="ALWAYS" />
   </VBox>
</fx:root>
